{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "types": ["node"],

    /* Other Outputs */
    "sourceMap": true,

    /* Strict Type Checking */
    "strict": true,

    /* Recommended */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
